---
import "../styles/global.css";

interface Props {
  title: string;
  lang?: "en" | "zh";
}

const { title, lang = "en" } = Astro.props;

const content = {
  en: {
    nav: {
      docs: "Docs",
      api: "API",
      courses: "Courses",
      community: "Community",
      search: "Search docs...",
    },
    footer: {
      desc: "Part of the MindSpore ecosystem.",
      license: "Released under the Apache 2.0 License.",
      resources: "Resources",
      tutorials: "Tutorials",
      community: "Community",
      issues: "Issues",
    },
  },
  zh: {
    nav: {
      docs: "文档",
      api: "API",
      courses: "教程",
      community: "社区",
      search: "搜索文档...",
    },
    footer: {
      desc: "MindSpore 生态系统成员。",
      license: "基于 Apache 2.0 许可证发布。",
      resources: "资源",
      tutorials: "教程",
      community: "社区",
      issues: "问题反馈",
    },
  },
};

const t = content[lang];
const docsLink = lang === "zh" ? "/docs/zh" : "/docs/en";
const apiLink = lang === "zh" ? "/api/zh/index.html" : "/api/en/index.html";
const communityLink = lang === "zh" ? "/zh/community" : "/community";
---

<!doctype html>
<html lang={lang} class="antialiased text-stone-900 bg-white">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="MindQuantum - Open Source Quantum Computing Framework"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- Inter for UI, JetBrains Mono for Code, Noto Sans SC for Chinese -->
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=JetBrains+Mono:wght@400;500&family=Noto+Sans+SC:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style>
      /* Override font for Chinese if needed, though Tailwind should handle via stack if configured, 
               but explicitly setting here ensures Noto Sans SC is used */
      :root[lang="zh"] {
        --font-sans: "Noto Sans SC", "Inter", system-ui, sans-serif;
      }
    </style>
  </head>
  <body class="min-h-screen flex flex-col font-sans">
    <!-- Technical Nav: Sticky, Blur, Functional -->
    <nav
      class="sticky top-0 z-50 w-full border-b border-stone-200 bg-white/80 backdrop-blur-md supports-[backdrop-filter]:bg-white/60"
    >
      <div
        class="max-w-[1440px] mx-auto px-6 h-16 flex items-center justify-between"
      >
        <div class="flex items-center gap-8">
          <a
            href={lang === "zh" ? "/zh" : "/"}
            class="flex items-center gap-2 font-semibold text-stone-900 tracking-tight"
          >
            <div
              class="w-6 h-6 bg-stone-900 rounded-sm text-white flex items-center justify-center text-[10px] font-bold"
            >
              M
            </div>
            MindQuantum
          </a>

          <!-- Desktop Links -->
          <div class="hidden md:flex gap-6 text-sm font-medium text-stone-600">
            <a href={docsLink} class="hover:text-blue-600 transition-colors"
              >{t.nav.docs}</a
            >
            <a href={apiLink} class="hover:text-blue-600 transition-colors"
              >{t.nav.api}</a
            >
            <a href="/courses" class="hover:text-blue-600 transition-colors"
              >{t.nav.courses}</a
            >
            <a
              href={communityLink}
              class="hover:text-blue-600 transition-colors">{t.nav.community}</a
            >
          </div>
        </div>

        <div class="flex items-center gap-4">
          <!-- Language Switcher (Simple) -->
          <div
            class="flex items-center text-xs font-medium text-stone-500 border border-stone-200 rounded overflow-hidden"
          >
            <a
              href="/"
              class={`px-2 py-1 ${lang === "en" ? "bg-stone-100 text-stone-900" : "hover:bg-stone-50"}`}
              >EN</a
            >
            <div class="w-px h-full bg-stone-200"></div>
            <a
              href="/zh"
              class={`px-2 py-1 ${lang === "zh" ? "bg-stone-100 text-stone-900" : "hover:bg-stone-50"}`}
              >中</a
            >
          </div>

          <!-- Search Placeholder (Visual) -->
          <div
            class="hidden lg:flex items-center gap-2 px-3 py-1.5 bg-stone-100 border border-stone-200 rounded text-xs text-stone-500 w-48"
          >
            <svg
              class="w-3 h-3"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg
            >
            <span>{t.nav.search}</span>
            <span
              class="ml-auto font-mono text-[10px] border border-stone-300 rounded px-1"
              >/</span
            >
          </div>

          <!-- GitHub/Gitee Link -->
          <a
            href="https://gitee.com/mindspore/mindquantum"
            class="text-stone-400 hover:text-stone-900 transition-colors"
            aria-label="Gitee Repository"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
              ><path
                fill-rule="evenodd"
                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                clip-rule="evenodd"></path></svg
            >
          </a>
        </div>
      </div>
    </nav>

    <slot />

    <footer class="mt-auto border-t border-stone-200 bg-white py-12">
      <div
        class="max-w-[1440px] mx-auto px-6 flex flex-col md:flex-row justify-between items-start gap-8"
      >
        <div class="space-y-4">
          <div class="font-bold text-stone-900">MindQuantum</div>
          <p class="text-sm text-stone-500 max-w-xs">
            {t.footer.desc}
            <br />
            {t.footer.license}
          </p>
        </div>

        <div class="flex gap-16 text-sm">
          <div class="flex flex-col gap-3">
            <span class="font-semibold text-stone-900"
              >{t.footer.resources}</span
            >
            <a href={docsLink} class="text-stone-500 hover:text-stone-900"
              >{t.nav.docs}</a
            >
            <a href="/courses" class="text-stone-500 hover:text-stone-900"
              >{t.footer.tutorials}</a
            >
            <a
              href="https://www.mindspore.cn/en"
              class="text-stone-500 hover:text-stone-900">MindSpore</a
            >
          </div>
          <div class="flex flex-col gap-3">
            <span class="font-semibold text-stone-900"
              >{t.footer.community}</span
            >
            <a
              href="https://gitee.com/mindspore/mindquantum"
              class="text-stone-500 hover:text-stone-900">Gitee</a
            >
            <a
              href="https://github.com/mindspore-ai/mindquantum"
              class="text-stone-500 hover:text-stone-900">GitHub</a
            >
            <a
              href="https://gitee.com/mindspore/mindquantum/issues"
              class="text-stone-500 hover:text-stone-900">{t.footer.issues}</a
            >
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
