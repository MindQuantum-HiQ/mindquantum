---
import BaseLayout from "../layouts/BaseLayout.astro";
import { DEFAULT_LANG } from "../config/i18n";
import { HOME_MESSAGES } from "../locales/home";
import HomePage from "../components/home/HomePage.astro";
import PreferredLanguageRedirect from "../components/home/PreferredLanguageRedirect.astro";
const lang = DEFAULT_LANG;
const messages = HOME_MESSAGES[lang];
const BASE = import.meta.env.BASE_URL || '/';
---
<BaseLayout lang={lang} title="MindQuantum" description={messages.metaDescription}>
  <PreferredLanguageRedirect defaultLang={lang} baseUrl={BASE} />
  <HomePage lang={lang} messages={messages} baseUrl={BASE} />
</BaseLayout>
